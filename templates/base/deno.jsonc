{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "importMap": "./import_map.json",
  "compilerOptions": {
    "strict": true
  },
  "tasks": {
    "dev": "deno run -A app/back/main.ts",
    "dev:front": "deno run -A app/front/main.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test -A --fail-fast"
  }
}
