{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "importMap": "./import_map.json",
  "compilerOptions": {
    "strict": true
  },
  "tasks": {
    "dev": "deno run -A dev.ts",
    "dev:api": "deno run -A --watch=app,domain,main.ts main.ts",
    "dev:web": "deno run -A --watch=web web/main.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test --fail-fast"
  }
}
